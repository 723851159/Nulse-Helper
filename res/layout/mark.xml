<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_bar" >

        <Button
            android:id="@+id/bttnReturn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/top_return_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="备注"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bttnMark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/bttn_marking_selector"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" >

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <CheckBox
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/label01_selector" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <CheckBox
            android:id="@+id/label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/label02_selector" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <CheckBox
            android:id="@+id/label3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/label03_selector" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" >

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <CheckBox
            android:id="@+id/label4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/label04_selector" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <CheckBox
            android:id="@+id/label5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/label05_selector" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <CheckBox
            android:id="@+id/label6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/label06_selector" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="left"
        android:orientation="horizontal" >

        <View
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <CheckBox
            android:id="@+id/label7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/label07_selector" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/white" />
    </LinearLayout>

</LinearLayout>